:function RegAutoBracket()
    inoremap ( ()<ESC>i
    inoremap [ []<ESC>i
    inoremap { {}<ESC>i
    inoremap < <><ESC>i
    inoremap " ""<ESC>i
    inoremap ' ''<ESC>i
:endfunction

:function UnRegAutoBracket()
    iunmap (
    iunmap [
    iunmap {
    iunmap <
    iunmap "
    iunmap '
:endfunction

:command AutoBracket :call RegAutoBracket()
:command UnAutoBracket :call UnRegAutoBracket()

