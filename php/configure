./configure  \
--prefix=/usr/local/php  \
--exec-prefix=/usr/local/php  \
--bindir=/usr/local/bin  \
--sbindir=/usr/local/sbin  \
--libexecdir=/usr/local/libexec  \
--sysconfdir=/etc  \
--with-config-file-path=/etc/php  \
--with-config-file-scan-dir=/etc/php/conf.d  \
--sharedstatedir=/usr/local/com  \
--localstatedir=/var  \
--runstatedir=/var/run  \
--libdir=/usr/local/php/lib  \
--includedir=/usr/local/php/include  \
--oldincludedir=/usr/local/php/oldinclude  \
--datarootdir=/usr/local/share  \
--datadir=/usr/local/share  \
--infodir=/usr/local/share/info  \
--localedir=/usr/local/share/locale  \
--mandir=/usr/local/share/man  \
--docdir=/usr/local/share/doc/php  \
--htmldir=/usr/local/share/doc/php  \
--dvidir=/usr/local/share/doc/php  \
--pdfdir=/usr/local/share/doc/php  \
--psdir=/usr/local/share/doc/php  \
--enable-fpm  \
--with-fpm-systemd  \
--with-pear=/usr/local/php/lib/pear
