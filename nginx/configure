./configure  \
--prefix=/usr/local/nginx  \
--sbin-path=/usr/local/sbin/nginx  \
--conf-path=/etc/nginx/nginx.conf  \
--error-log-path=/var/log/nginx/error.log  \
--pid-path=/run/nginx.pid  \
--http-log-path=/var/log/nginx/access.log  \
--http-client-body-temp-path=/var/local/nginx/client_body_temp  \
--http-proxy-temp-path=/var/local/nginx/proxy_temp  \
--http-fastcgi-temp-path=/var/local/nginx/fastcgi_temp  \
--http-uwsgi-temp-path=/var/local/nginx/uwsgi_temp  \
--http-scgi-temp-path=/var/local/nginx/scgi_temp  \
--with-http_ssl_module
